#!/bin/bash
set -euo pipefail

STAGE="dev"

usage="USAGE: $(basename "$0") [-s|--stage] <stage>
where:
    -s | --stage        stage for deployment (required)
    -h | --help         show this help text"

while [ $# -gt 0 ]; do
    if [[ $1 =~ "--"* ]]; then
        case $1 in
            --help|-h) echo "$usage"; exit; ;;
            --stage|-s) STAGE=$2;;
        esac
    fi
    shift
done

if [ -z "$STAGE" ]; then
  echo "$usage"; exit 1;
fi

./node_modules/.bin/sls deploy --stage "$STAGE" --region us-east-1 --verbose